<Window x:Class="lab_3WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_3WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ToolBarTray Grid.Row="0">
        <ToolBar Margin="5" Padding="5">
            <ComboBox Margin="5" Padding="5" SelectedIndex="0" Width="200" SelectionChanged="ComboBox_SelectionChanged">
                <TextBlock Text="Arial"/>
                <TextBlock Text="Times New Roman"/>
                <TextBlock Text="Verdana"/>
            </ComboBox>
            <ComboBox Margin="5" Padding="5" SelectedIndex="2" Width="50" SelectionChanged="ComboBox_SelectionChanged_1">
                <TextBlock Text="12"/>
                <TextBlock Text="14"/>
                <TextBlock Text="16"/>
                <TextBlock Text="24"/>
            </ComboBox>
        </ToolBar >
        <ToolBar Margin="5" Padding="5">
            <Button Width="30.9" Click="Button_Click">
                <Image Source="Data/button_blank_blue_14984.png" Width="25"/>
            </Button>
            <Separator/>
            <Button>
                <Image Source="Data/button_blank_green_14986.png" Width="25"/>
            </Button>
            <Separator/>
            <Button>
                    <Image Source="Data/button_blank_yellow_14988.png" Width="25"/>
            </Button>
            <Separator/>
        </ToolBar>
        <ToolBar Margin="5" Padding="5">
                <StackPanel VerticalAlignment="Center">
                    <RadioButton Content="Черный" IsChecked="True"/>
                    <RadioButton Content="Красный"/>
                </StackPanel>   
        </ToolBar>
        </ToolBarTray>
        <TextBox Name="textBox" Grid.Row="1" Margin="5" Padding="5" FontSize="16" FontFamily="Arial" TextWrapping="Wrap"/>
    </Grid>
</Window>
