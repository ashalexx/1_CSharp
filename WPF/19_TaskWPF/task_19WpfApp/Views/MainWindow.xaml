<Window x:Class="task_19WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task_19WpfApp"
        xmlns:vm="clr-namespace:task_19WpfApp.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите радиус:"/>
            <TextBox Text="{Binding Path=Number1}"/>            
            <Button Content="Расчитать длину окружности" Command="{Binding Path=AddCommand}"/>
            <TextBox Text="{Binding Path=Number3}"/>
        </StackPanel>
    </Grid>
</Window>
